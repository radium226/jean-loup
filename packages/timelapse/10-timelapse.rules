polkit.addRule(function(action, subject) {
  if (
    action.id == "org.freedesktop.systemd1.manage-units" &&
    RegExp('timelapse-press-button@(short|long|double).service').test(action.lookup("unit")) === true &&
    subject.isInGroup("pisugar-server")
  ) {
      return polkit.Result.YES;
    }
})
