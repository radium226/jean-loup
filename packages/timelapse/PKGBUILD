arch=("any")
pkgname=timelapse
pkgver="0.1.0"
pkgrel=1

source=(
    "$pkgname-$pkgver.tar.gz"
    "tmpfiles.conf"
    "sysusers.conf"
    "timelapse.service"
    "timelapse-press-button@.service"
    "10-timelapse.rules"
)

sha256sums=(
  "SKIP"
  "SKIP"
  "SKIP"
  "SKIP"
  "SKIP"
  "SKIP"
)

makedepends=(
    "python-build" 
    "python-installer" 
    "python-wheel"
)

depends=(
    "python"
    "python-click-default-group"
    "python-click"
    "python-pendulum"
)

build() {
    cd "$srcdir/$pkgname-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    install -Dm644 sysusers.conf "$pkgdir/usr/lib/sysusers.d/timelapse.conf"
    install -Dm644 tmpfiles.conf "$pkgdir/usr/lib/tmpfiles.d/timelapse.conf"
    install -Dm644 timelapse.service "$pkgdir/usr/lib/systemd/system/timelapse.service"
    install -Dm644 timelapse-press-button@.service "$pkgdir/usr/lib/systemd/system/timelapse-press-button@.service"
    install -Dm644 "10-timelapse.rules" "$pkgdir/etc/polkit-1/rules.d/10-timelapse.rules"


    cd "$pkgname-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}