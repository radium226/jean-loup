[Unit]
Description=PiSugar Server

[Service]
User=pisugar
ExecStart=/usr/bin/pisugar-server --model "PiSugar 3" --web "/usr/lib/pisugar/server" --uds "%t/pisugar/server.sock" --config "/etc/pisugar/server/config.json" --http "0.0.0.0:8765"
ExecStopPost=rm "%t/pisugar/pisugar.sock"
Type=simple
UMask=0007 

[Install]
WantedBy=multi-user.target